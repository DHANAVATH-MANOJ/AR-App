<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark Theme Text Appearances -->
    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="TextAppearance.App.SectionHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_accent_color</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_secondary_text</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_tertiary_text</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- Dark App Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_accent_color</item>
        <item name="colorPrimaryVariant">@color/dark_accent_variant</item>
        <item name="colorOnPrimary">@color/dark_primary_text</item>
        <item name="colorSecondary">@color/dark_secondary_accent</item>
        <item name="colorOnSecondary">@color/dark_primary_text</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_primary_text</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_primary_text</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>


</resources>